<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/comic_card_width"
        android:layout_height="@dimen/comic_card_height">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_comic_photo"
            android:scaleType="centerCrop"
            android:contentDescription="@string/foto_da_comic" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="#99"
        android:textSize="@dimen/text_size_comic"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margintop_comic_text" />

</LinearLayout>